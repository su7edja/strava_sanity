{
  "name": "Strava Sanity",
  "version": "1.0",
  "description": "Strava feeds that don't drive you nuts",
  "permissions": ["declarativeContent", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.strava.com/*"],
      "js": ["feeds.js"]
    }
  ],
  "icons": {
    "16": "images/S16.png",
    "32": "images/S32.png",
    "48": "images/S48.png",
    "128": "images/S128.png"
  },
  "manifest_version": 2
}
